@model IEnumerable<KitapEvi.Models.Product>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<div class="row pb-3 backgroundWhite">
	@foreach (var product in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12  p-1">
					<div class="card" style="border:0px;">
						<img src="@product.ImageUrl" class="card-img-top rounded" />
						<div class="pl-1">
							<p class="card-title h5"><b style="color:#2c3e50">@product.Title</b></p>
							<p class="card-title text-primary">@localizer["by"] <b>@product.Author</b></p>
						</div>
						<div style="padding-left:5px;">
							<p>@localizer["List Price"]: <strike><b class="">$@product.ListPrice.ToString("0.00")</b></strike></p>
						</div>
						<div style="padding-left:5px;">
							<p style="color:maroon">@localizer["As low as"]: <b class="">$@product.Price100.ToString("0.00")</b></p>
						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">@localizer["Details"]</a>
					</div>
				</div>
			</div>
		</div>
	}

</div>

